<h1>Admin</h1><br>

<h3>Manage Users</h3>
<table>
  <thead>
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><% user.roles.each do |role| %>
        <%= role.name %>
        <% end %>
      </td>
      <td>
        <%= form_tag("/admin/" + user.id.to_s + "?role=admin", method: :PUT) do %>
        <input type="submit" value="Make Admin", class="button tiny"/>
        <% end %>
        <!-- <%= link_to "Destroy", user_registration_path, :confirm => 'Are you sure you want to destroy this account?', method: :delete, class: "button tiny alert"%> -->
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
