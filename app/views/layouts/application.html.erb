<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ThreeMusketeers</title>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    "application" %>

    <!-- Maps scripts -->
    <script src="//maps.google.com/maps/api/js?key=AIzaSyBxDv1zsN-SN5w1TQjY8GF8NSM4k7AEARw"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src="//cdn.rawgit.com/printercu/googmaps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js" type="text/javascript"></script>

    <!-- My style sheet -->
  </head>

  <body>

    <!-- small nav -->
    <div class="title-bar" data-responsive-toggle="example-menu" data-hide-for="medium">
      <button class="menu-icon" type="button" data-toggle="my-menu"></button>
      <div class="title-bar-title">Menu</div>
    </div>

    <!-- medium + nav -->

      <div class="top-bar" id="my-menu">
        <div class="top-bar-left">
          <ul class="dropdown menu" data-dropdown-menu>
            <li class="menu-text">Apartments App</li>
            <% if !current_user.nil? %>
              <li>Hello, <%= current_user.email + ' (' + current_user.roles.pluck(:name).join(",") + ')' %></li>

              <li><% if current_user.has_role? :admin %>
              | <%= link_to('Admin Page', admin_path) %> | </li><br>
              <% end %>
            <% end %>
          </ul>
        </div>
      <div class="top-bar-right">
        <ul class="dropdown menu" data-dropdown-menu>
            <li><%= link_to 'Home', apartments_path%></li>
            <li><% if user_signed_in? %>
              <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>
            <% else %>
              <%= link_to 'Login', new_user_session_path %>
            <% end %>
            </li>
          </ul>
        </div>
      </div>


    <div id="content">
      <%= yield %>
    </div>

  </body>
</html>
