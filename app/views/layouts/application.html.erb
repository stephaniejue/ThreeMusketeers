<!DOCTYPE html>
<html>
<head>
  <title>ThreeMusketeers</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//maps.google.com/maps/api/js?key=AIzaSyBxDv1zsN-SN5w1TQjY8GF8NSM4k7AEARw"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src="//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js" type="text/javascript"></script>
</head>
<body>

<% if !current_user.nil? %>
  <%= current_user.email + ' (' + current_user.roles.pluck(:name).join(",") + ')' %>

  <% if current_user.has_role? :admin %>
  | <%= link_to('Admin Page', admin_path) %> | <br>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
<% else %>
  <%= link_to('Login', new_user_session_path)  %>
<% end %>

<%= yield %>

</body>
</html>
