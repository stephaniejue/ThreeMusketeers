<p id="notice"><%= notice %></p>

<h1>Listing Apartments</h1>

<%= form_tag("/", method: "get") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Street one</th>
      <th>Street two</th>
      <th>City</th>
      <th>Postal code</th>
      <th>State</th>
      <th>Country</th>
      <!-- <th>Latitude</th>
      <th>Longitude</th> -->
      <th>Contact name</th>
      <th>Contact phone</th>
      <th>Contact hours</th>
      <th>User Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= link_to image_tag(apartment.image.url(:small)), apartment.image.url %>
        <td><%= apartment.street_one %></td>
        <td><%= apartment.street_two %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.postal_code %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.country %></td>
        <!-- <td><%= apartment.latitude %></td>
        <td><%= apartment.longitude %></td> -->
        <td><%= apartment.contact_name %></td>
        <td><%= apartment.contact_phone %></td>
        <td><%= apartment.contact_hours %></td>
        <td><%= apartment.user.email %></td>
        <td><%= link_to 'Show', apartment %></td>
        <% if @ability.can? :manage, apartment %>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Apartment', new_apartment_path %>
<% end %>
